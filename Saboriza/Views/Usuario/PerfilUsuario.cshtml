@model Saboriza.Models.Usuario

@{
    ViewData["Title"] = "MEU PERFIL";
}
<div class="profile-container">
    <div class="profile-header">
        <h1 class="profile-name">@Model.NomeUsuario</h1>
        <p class="profile-join-date">Membro desde @Model.CreatedAt.ToString("MMMM yyyy")</p>
    </div>

    <div class="profile-details">
        <div class="detail-section">
            <h2 class="section-title">Informações Pessoais</h2>
            <div class="detail-item">
                <i class="fas fa-envelope"></i>
                <span>@Model.Email</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-phone"></i>
                <span>@Model.Telefone</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-map-marker-alt"></i>
                <span>@Model.Telefone</span>
            </div>
            <button class="btn-edit-profile">Editar Perfil</button>
        </div>

        <div class="detail-section">
            <h2 class="section-title">Meus Pedidos Recentes</h2>
            <div class="empty-orders">
                <i class="fas fa-shopping-bag"></i>
                <p>Você ainda não fez nenhum pedido</p>
                <a href="@Url.Action("Index", "Home")" class="btn-shop-now">Compre agora</a>
            </div>
        </div>
    </div>
</div>
